<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:parentTag="android.widget.LinearLayout">

    <ImageView
        android:id="@+id/imgOnline"
        android:layout_width="@dimen/default_indicator_size"
        android:layout_height="@dimen/default_indicator_size"
        android:contentDescription="@string/online_indicator"
        android:src="@drawable/indicator_shape" />

    <ImageView
        android:id="@+id/imgAvailable"
        android:layout_width="@dimen/default_indicator_size"
        android:layout_height="@dimen/default_indicator_size"
        android:layout_marginStart="@dimen/default_indicator_space"
        android:contentDescription="@string/available_indicator"
        android:src="@drawable/indicator_shape" />
</merge>